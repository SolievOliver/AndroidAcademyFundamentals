<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_movie_details_activity"
    tools:context=".MovieDetailsActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_menu_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="44dp" />

    <ImageView
        android:id="@+id/back_image"
        android:layout_width="6dp"
        android:layout_height="10dp"
        android:layout_marginEnd="@dimen/space_1x"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/back_text"
        app:layout_constraintEnd_toStartOf="@+id/back_text"
        app:layout_constraintTop_toTopOf="@+id/back_text"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/back_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_2_5x"
        android:layout_marginStart="@dimen/space_4x"
        android:text="@string/back"
        android:textColor="@color/white_opacity"
        android:textSize="@dimen/text_size_2x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top_menu_guideline" />

    <TextView
        android:textSize="@dimen/text_size_5x"
        android:textColor="@color/gray"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/name_top_margin"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/space_2x"
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/avengers_end_game"/>

</androidx.constraintlayout.widget.ConstraintLayout>